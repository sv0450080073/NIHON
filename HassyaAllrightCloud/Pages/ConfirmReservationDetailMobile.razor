@inherits ConfirmReservationDetailMobileBase
<div class="row m-0">
    <div class="col-12 p-0">
        <label class="font-weight-bold">@(Data.Type == 0 ? Lang["RepairDetail"] : Lang["ReservationDetail"])</label>
    </div>
    <div class="col-12 p-0">
        <div class="row m-0">
            <label class="col-2 text-white p-0 text-center" style="background-color: @Data.Status">@(Data.Type == 0 ? Lang["repair"] : Data.Type == 1 ? Lang["daytrip"] : Lang["overnight"])</label>
            <label class="col-10">@Data.Name</label>
        </div>
    </div>
    <div class="col-12 p-0">
        <label class="font-weight-bold">@Data.PopupYmd</label>
    </div>
    @if(Data.Type == 0)
    {
        <div class="col-12 p-0">
            <label>@Lang["EigyoName"]</label>
        </div>
        <div class="col-12 p-0">
            <label class="ml-4">@Data.EigyoName</label>
        </div>
        <div class="col-12 p-0">
            <label>@Lang["SyaRyoName"]</label>
        </div>
        <div class="col-12 p-0">
            <label class="ml-4">@Data.SyaRyoName</label>
        </div>
    }
    @if(Data.Type != 0)
    {
        <div class="col-12 p-0">
            <label>@Lang["Customer"]</label>
        </div>
        <div class="col-12 p-0">
            <label class="ml-4">@Data.Customer</label>
        </div>
    }
    <div class="col-12 p-0">
        <label>@Lang["DispatchNote"]</label>
    </div>
    <div class="col-12 p-0">
        <label class="ml-4">@Data.DispatchNote</label>
    </div>
    @if(Data.Type != 0)
    {
        <div class="col-12 p-0">
            <div class="row m-0">
                <div class="col-6 text-center">
                    <button type="button" class="btn border border-dark" @onclick="OnCancel">@Lang["Cancel"]</button>
                </div>
                <div class="col-6 text-center">
                    <button type="button" class="btn border border-dark" @onclick="OnNavigate">@Lang["End"]</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-12 p-0 text-center">
            <button type="button" class="btn border border-dark" @onclick="() => eventCallback.InvokeAsync(false)">@Lang["OK"]</button>
        </div>
    }
</div>

<HassyaAllrightCloud.Pages.Components.MessageBox Message="@Message" Type="Type" IsShow="IsShow" EventCallback="OnClosePopup"></HassyaAllrightCloud.Pages.Components.MessageBox>