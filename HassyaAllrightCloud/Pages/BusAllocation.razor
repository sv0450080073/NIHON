                return driver;
            }
            else
            {
                return DriverCharts.FirstOrDefault(dr => dr != null
                        && dr.KyoSHe_SyainCdSeq == (BusAllocationDataUpdate.DriverAssigneds?.ElementAtOrDefault(indexOrder)?.SyainCdSeq ?? -1));
            }
        }
        else
