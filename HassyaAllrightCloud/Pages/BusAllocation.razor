                    int BeginIndex = Math.Min(SelectedItem.RowID, (int)CurrentClick);
                    int EndIndex = Math.Max(SelectedItem.RowID, (int)CurrentClick);
                    for (int IndexToBeAdd = BeginIndex; IndexToBeAdd <= EndIndex; IndexToBeAdd++)
