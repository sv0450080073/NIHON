@page  "/{handler?}"
@*@model _HostAuthModel*@
@namespace HassyaAllrightCloud.Pages
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    var baseUrl = Configuration.GetValue<string>("MySettings:BaseUrl");
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HassyaAlrightCloud v1.0.0</title>
    <base href="@baseUrl/" />
    <link href="lib/Blazor.ContextMenu/blazorContextMenu.css" rel="stylesheet" />
    <script src="lib/Blazor.ContextMenu/blazorContextMenu.js"></script>
    <link href="css/style.css" rel="stylesheet" />
    <script src="js/jquery-3.4.1.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/jquery.scrollbar.min.js"></script>
    <script src="js/Sortable.min.js"></script>
    <script src="js/components/inputfile.js"></script>
    <script src="js/dragndrop.table.columns.min.js"></script>
    <script type="module" src="_content/SharedLibraries.UI/js/shared-libs.js"></script>
    <script src="~/js/mobile-detect.js"></script>
    <script src="js/main.js"></script>
    <script src="js/utf8.js"></script>
    <style></style>
    <link href="_content/DevExpress.Blazor/dx-blazor.css" rel="stylesheet" />
    <link href="_content/SharedLibraries.UI/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="lib/radzen/default-base.css">
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
</head>
<body class="custom-body">
    <app>
        <component type="typeof(App)" render-mode="Server" />
    </app>
    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <script src="_framework/blazor.server.js"></script>
    <script src="./js/recorder.js"></script>
    <script src="_content/Blazored.Modal/blazored.modal.js"></script>
</body>
</html>